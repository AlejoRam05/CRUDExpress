<!-- views/userDetail.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Usuario</title>
</head>
<body>
    <h1>Pizarras de <%= user.nombre %></h1>

    <ul>
        <% user.pizarras.forEach(pizarra => { %>
            <li>
                Clase: <%= pizarra.clase %> - Creada el: <%= pizarra.createdAt.toLocaleDateString() %>
            </li>
        <% }) %>
    </ul>

    <h2>Agregar Nueva Pizarra</h2>
    <form action="/users/<%= user._id %>/pizarras" method="POST">
        <label for="clase">Clase:</label>
        <input type="text" id="clase" name="clase" required>
        <button type="submit">Agregar Pizarra</button>
    </form>

    <button onclick="window.location.href='/'">Volver a Usuarios</button>
</body>
</html>
